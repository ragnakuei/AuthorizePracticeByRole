@model SharedLibrary.Models.GroupDetailViewModel

@{
    ViewBag.Title = "title";
}

<h2>Detail</h2>


<div class="form-horizontal">
    <hr/>

    <div class="form-group">
        @Html.LabelFor(model => model.Group.Id, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Group.Id, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Group.Name, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Group.Name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Group.Created, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Group.Created, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.UserNames, new { @class = "control-label col-md-2" })

        <div class="table-responsive">
            <table class="table">
                @foreach (var userName in Model.UserNames)
                {
                    <tr>
                        <td>@(userName)</td>
                    </tr>
                }
            </table>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.RoleNames, new { @class = "control-label col-md-2" })

        <div class="table-responsive">
            <table class="table">
                @foreach (var roleName in Model.RoleNames)
                {
                    <tr>
                        <td>@(roleName)</td>
                    </tr>
                }
            </table>
        </div>
    </div>
    
    <div class="form-group">
      @Html.ActionLink("Back", "Index",null, new { htmlAttributes = new { @class = "form-control" } })  
    </div>
</div>